<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.salazar.cheers.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_mapFragment"
            app:destination="@id/mapFragment"
            app:enterAnim="@anim/in_from_left"
            app:exitAnim="@anim/out_to_right"
            app:popEnterAnim="@anim/in_from_right"
            app:popExitAnim="@anim/out_to_left" />
        <action
            android:id="@+id/action_homeFragment_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_likesFragment"
            app:destination="@id/likesFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right" />
        <action
            android:id="@+id/action_homeFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right" />
        <action
            android:id="@+id/action_homeFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.salazar.cheers.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right" />
        <action
            android:id="@+id/action_profileFragment_to_followersFollowingFragment"
            app:destination="@id/followersFollowingFragment" />
        <action
            android:id="@+id/action_profileFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.salazar.cheers.ui.map.MapFragment"
        android:label="MapFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.salazar.cheers.ui.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment"
            app:enterAnim="@anim/in_from_right"
            app:exitAnim="@anim/out_to_left"
            app:popEnterAnim="@anim/in_from_left"
            app:popExitAnim="@anim/out_to_right" />
    </fragment>
    <dialog
        android:id="@+id/addDialogFragment"
        android:name="com.salazar.cheers.ui.add.AddDialogFragment"
        android:label="AddDialogFragment" >
        <argument
            android:name="location"
            app:argType="com.mapbox.geojson.Point"
            app:nullable="true"
            android:defaultValue="@null"/>
    </dialog>
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.salazar.cheers.ui.chats.MessagesFragment"
        android:label="MessagesFragment" >
        <action
            android:id="@+id/action_messagesFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
    </fragment>
    <fragment
        android:id="@+id/otherProfileFragment"
        android:name="com.salazar.cheers.ui.otherprofile.OtherProfileFragment"
        android:label="OtherProfileFragment">
        <action
            android:id="@+id/action_otherProfileFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="https://cheers.app/{username}" />
        <argument
            android:name="username"
            app:argType="string" />
        <action
            android:id="@+id/action_otherProfileFragment_to_otherFollowersFollowing"
            app:destination="@id/otherFollowersFollowing" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.salazar.cheers.ui.profile.EditProfileFragment"
        android:label="EditProfileFragment" />
    <activity
        android:id="@+id/chatActivity"
        android:name="com.salazar.cheers.ui.chat.ChatActivity"
        android:label="activity_chat"
        tools:layout="@layout/activity_chat" >
        <argument
            android:name="channelId"
            app:argType="string" />
        <argument android:name="name"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="profilePicturePath"
            app:argType="string" />
    </activity>
    <include app:graph="@navigation/mobile_navigation_chat" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.salazar.cheers.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/followersFollowingFragment"
        android:name="com.salazar.cheers.ui.profile.FollowersFollowingFragment"
        android:label="FollowersFollowingFragment" >
        <action
            android:id="@+id/action_followersFollowingFragment_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment" />
        <argument
            android:name="username"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/activityFragment"
        android:name="com.salazar.cheers.ui.activity.ActivityFragment"
        android:label="ActivityFragment" />
    <dialog
        android:id="@+id/newMessageFragment"
        android:name="com.salazar.cheers.ui.chats.NewMessageFragment"
        android:label="NewMessageFragment" >
        <action
            android:id="@+id/action_dialogFragmentScreen_to_chatActivity"
            app:destination="@id/chatActivity"
            app:popUpTo="@id/messagesFragment" />
    </dialog>
    <dialog
        android:id="@+id/chooseOnMap"
        android:name="com.salazar.cheers.ui.map.ChooseOnMap"
        android:label="ChooseOnMap" >
        <action
            android:id="@+id/action_chooseOnMap_to_addDialogFragment"
            app:destination="@id/addDialogFragment" />
    </dialog>
    <dialog
        android:id="@+id/tagUser"
        android:name="com.salazar.cheers.ui.taguser.TagUser"
        android:label="TagUser" />
    <dialog
        android:id="@+id/postMapDialog"
        android:name="com.salazar.cheers.ui.map.PostMapDialog"
        android:label="PostMapDialog" />
    <dialog
        android:id="@+id/moreOtherProfileBottomSheet"
        android:name="com.salazar.cheers.ui.otherprofile.MoreOtherProfileBottomSheet"
        android:label="MoreOtherProfileBottomSheet" />
    <fragment
        android:id="@+id/otherFollowersFollowing"
        android:name="com.salazar.cheers.ui.otherprofile.OtherFollowersFollowing"
        android:label="OtherFollowersFollowing" >
        <argument
            android:name="username"
            app:argType="string" />
        <action
            android:id="@+id/action_otherFollowersFollowing_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment" />
        <argument android:name="goToFollowing"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/likesFragment"
        android:name="com.salazar.cheers.ui.home.likes.LikesFragment"
        android:label="LikesFragment" >
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_likesFragment_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.salazar.cheers.ui.detail.PostDetailFragment"
        android:label="PostDetailFragment" >
        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_postDetailFragment_to_otherProfileFragment"
            app:destination="@id/otherProfileFragment" />
    </fragment>
    <dialog
        android:id="@+id/addEventFragment"
        android:name="com.salazar.cheers.ui.event.AddEventFragment"
        android:label="AddEventFragment" />
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.salazar.cheers.ui.event.detail.EventDetailFragment"
        android:label="EventDetailFragment" >
        <argument
            android:name="eventId"
            app:argType="string" />
    </fragment>
</navigation>